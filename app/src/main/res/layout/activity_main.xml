<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bot Token -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBotToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bot Token"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="3"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Chat ID -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etChatId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chat ID"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Filter Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки фильтрации"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Allowed Numbers -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAllowedNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Разрешенные номера (через запятую)"
                android:inputType="phone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Keywords -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ключевые слова (через запятую)"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Switches -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchOnlyImportant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Только важные SMS"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchIncludeSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Включать номер отправителя"
            android:checked="true"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchIncludeTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Включать время получения"
            android:layout_marginBottom="16dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить настройки"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запустить сервис"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Остановить сервис"
            android:backgroundTint="@color/red_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус: Сервис остановлен"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@color/purple_200"
            android:textColor="@android:color/black"/>

        <!-- Log -->
        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Лог действий:\n"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:maxLines="10"
            android:scrollbars="vertical"/>

    </LinearLayout>
</ScrollView>